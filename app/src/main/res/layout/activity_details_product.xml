<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.DetailsProduct">
  <androidx.appcompat.widget.Toolbar
      android:id="@+id/toolbardetailproduct"
      android:background="#3F9F97"
      app:titleTextColor="#0E0101"
      app:title="Информация о товаре"
      android:layout_width="match_parent"
      android:layout_height="?actionBarSize">
  </androidx.appcompat.widget.Toolbar>
  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/imageviewdetailproduct"
        android:src="@mipmap/ic_launcher"
        android:layout_margin="5dp"
        android:layout_width="160dp"
        android:layout_height="160dp" />
    <LinearLayout
        android:weightSum="6"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
      <LinearLayout
          android:layout_weight="4"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textviewnamedetailproduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Назыание продукта"
            android:textColor="#f000"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:textSize="22sp"
            android:id="@+id/textviewpricedetailproduct"
            android:layout_marginLeft="5dp"
            android:text="Цена продукта"
            android:textColor="#E91E63"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
      </LinearLayout>
    </LinearLayout>
  </LinearLayout>

  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="500dp">
    <TextView
        android:textColor="#34B47C"
        android:layout_marginTop="5dp"
        android:textSize="23sp"
        android:text="Описание товара"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <TextView
          android:layout_marginLeft="5dp"
          android:layout_marginTop="5dp"
          android:textSize="18sp"
          android:paddingBottom="10dp"
          android:id="@+id/textviewdescriptiondetailproduct"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
    </ScrollView>
  </LinearLayout>
  <LinearLayout
      android:gravity="center"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    <Spinner
        android:layout_marginLeft="2dp"
        android:layout_margin="2dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/spinner"
        android:gravity="center"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:id="@+id/spinner"
        android:layout_width="50dp"
        android:layout_height="match_parent">
    </Spinner>
    <Button
        android:id="@+id/buttonAddToShoppingCart"
        android:textColor="#ffffff"
        android:background="#000000"
        android:textSize="15sp"
        android:text="Добавить в корзину"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
  </LinearLayout>
  </LinearLayout>